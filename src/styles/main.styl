// ***********
// User Styles
// ***********

// Variables
font-stack = "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif


// Global Styles
html
 font-size: 20px
 line-height: 1.4
 -webkit-font-smoothing: antialiased

body
  font-family: font-stack
  font-weight: 300
  background: url(../img/bg.jpg) no-repeat center center fixed
  background-size: cover

body, section
  positon: relative


// Headings
h1
  font-weight: 300

h2, h3, h4, h5, h6
  font-weight: 300

// Anchors
a
  text-decoration: none

a:hover
  text-decoration: underline


// Abbreviations
abbr[title]
  cursor: help
  border-bottom: 1px dotted gray


// Lists
ul
  padding: 0


// Header
header
  position: fixed
  top: 0
  right: 0
  left: 0
  padding-top: 4em
  display: block
  text-align: center
  width: 1080px
  margin: 0 auto
  z-index: -1

header a
  color: inherit

header a:hover
  text-decoration: none

.name
  font-size: 5em
  margin: 0

.job-description
  font-size: 2em

.main-nav ul
  list-style-type: none

.main-nav li
  display: inline-block

.main-nav a
  display: inline-block
  padding: 20px

.main-nav a:hover
  text-decoration: underline


// Logo Animation
.logo__b
  stroke-dasharray: 272
  stroke-dashoffset: 272
  animation: dash-b 2.5s ease-out forwards
  animation-delay: 1s

.logo__h__vertical
  stroke-dasharray: 135
  stroke-dashoffset: 135
  animation: dash-h-vertical 3.5s ease-out forwards
  animation-delay: 1s

.logo__h__curve
  stroke-dasharray: 135
  stroke-dashoffset: 135
  animation: dash-h-curve 3.25s ease-out forwards
  animation-delay: 1s

@keyframes dash-b
  0%
    stroke-dashoffset: 540
    opacity: 0
  95%
    opacity: 1
  100%
    stroke-dashoffset: 0

@keyframes dash-h-vertical
  0%
    stroke-dashoffset: 405
    opacity: 0
  90%
    opacity: 1
  100%
    stroke-dashoffset: 0

@keyframes dash-h-curve
  0%
    stroke-dashoffset: 405
    opacity: 0
  97%
    opacity: 1
  100%
    stroke-dashoffset: 0


// Sections
.section-container
  position: absolute
  display: block
  top: 100%
  background-color: #e9e9e9